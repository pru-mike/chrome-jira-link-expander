{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "rules": {
      "semi": ["error","always"],
      "space-before-function-paren": ["error", {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "ignore"
      }],
      "new-cap": ["error", { "newIsCapExceptions": ["jiraOptions"] }]
    },
    "env": {
      "browser": true,
      "webextensions": true,
      "mocha": true
    },
    "globals": {
      "jira": true,
      "utils": true
    }
}
